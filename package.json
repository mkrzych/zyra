{
  "name": "zyra",
  "version": "1.0.0",
  "description": "Multi-tenant SaaS project management system",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter @zyra/frontend test:e2e",
    "db:generate": "pnpm --filter @zyra/backend db:generate",
    "db:migrate": "pnpm --filter @zyra/backend db:migrate",
    "db:seed": "pnpm --filter @zyra/backend db:seed",
    "db:studio": "pnpm --filter @zyra/backend db:studio",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}